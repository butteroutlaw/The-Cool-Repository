import javax.swing.JOptionPane;

public class passwordresetui {
	static String question = "What is my mother's maiden name?";
	static String answer = "Margerie";
  public static void main(String[] args)
  {
String strAnswer = JOptionPane.showInputDialog("Security Question: " + question);

JOptionPane.showMessageDialog(null, "Your answer was " + strAnswer);


if (strAnswer == answer);
	JOptionPane.showMessageDialog(null, "Your answer has been verified");
System.exit(0);
  }
}
